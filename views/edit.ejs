<%- include('partials/header') %>
<div id="cont" class="container-sm">
  <h1>Edit <%=blog.title %></h1>
  <div>
    <form action="/blog/<%=blog._id%>?_method=PUT" method="POST">
      <div class="mb-3">
        <label  class="form-label">Title</label>
        <input type="text" name="blog[title]" value="<%=blog.title%>"  class="form-control" id="title" placeholder="Title">
        <label  class="form-label">image here</label>
        <input type="text" name="blog[image]" value="<%=blog.image %>" class="form-control" id="title" placeholder="Image Here">
      </div>
      <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea class="form-control" name="blog[description]" rows="3"> <%=blog.description %></textarea>
      </div>
      <button class="btn btn-warning" type="submit">Update</button>
    </form>
  </div>
</div>