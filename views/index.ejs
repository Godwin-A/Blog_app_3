<div class="jumbotron">

</div>
      <div class="container">
        <h1 class="mb-4">Blog Articles</h1> 
        <!-- <h4> <%= currentUser %></h4> -->
        <a href="/blogs/new" class="btn btn-success"> New Blog</a>
        <% blogs.forEach(function(blog){ %>
          <div class="container">
            <div class="card mt-4">
              <div class="card-body">
                <h4 class="card-title"> <%= blog.title %> </h4>
                <div class="row">
                <div class="col-lg-6">
                      <img class="img-fluid img-thumbnail" src="<%=blog.image%> " alt="">
                </div>
                <div class="col-lg-6">
                  <p>happy i am</p>
                </div></div>
                <div class="card-subtitle text-muted mb-2">        
                  <%=blog.created.toDateString()%>
                </div>
              </div>
              
              <div>
                <%=blog.description.substring(0, 200) %>
                <%= blog.author.username %>
              </div><a type="button" class="btn btn-primary" href="/blogs/<%= blog._id %>">
              <div  class="ui animated button" tabindex="0">
                <div class="visible content">Read More</div>
                <div class="hidden content">
                  <i class="right arrow icon"></i>
                </div>
              </div></a>
              </div>        -->
      <%  }) %>
      </div>
      </div>
    </div>
    </div>
